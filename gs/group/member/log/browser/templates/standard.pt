<html xmlns ="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/title}: ${view/siteInfo/get_name}">
        Join and Leave Log for Group Name: Site Name
      </span>
    </title>
  </head>
  <body>
    <tal:block metal:fill-slot="body">
      <h1 tal:content="view/title">Join and Leave Log for Group Name</h1>
      <div tal:repeat="log view/log/monthLogs">
        <p>
          <strong><span tal:replace="log/year"/> <span tal:replace="log/month"/></strong>
        </p>
        <p>
          <span tal:replace="log/numMembersMonthEnd"/> members:
          <span tal:replace="log/numMembersLeft"/> left,
          <span tal:replace="log/numMembersJoined"/> joined.
        </p>
      </div>
    </tal:block>
  </body>
</html>

