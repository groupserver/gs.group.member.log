<?xml version="1.0" encoding="utf-8"?>
<div tal:repeat="monthLog options/log/monthLogs">
  <h4 tal:content="monthLog/label">August 2010</h4>
  <p>
    <span tal:replace="python:monthLog.numMembersMonthEnd==1 and '1 member' 
      or '%d members' % monthLog.numMembersMonthEnd"/>:
    <span tal:replace="monthLog/numMembersJoined"/> joined,
    <span tal:replace="monthLog/numMembersLeft"/> left
  </p>
</div>
<div tal:condition="not:options/log/monthLogs">
  <p>No join or leave events to display.</p>
</div>
