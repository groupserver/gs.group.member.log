<html xmlns ="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/title}: ${view/siteInfo/get_name}">
        Join and Leave Log for Group Name: Site Name
      </span>
    </title>
    <tal:block metal:fill-slot="style">
      <style type="text/css">
        /* Borrowed from globalstyle-20100525.css */
        /* Tabs */
        .tabmenu ul {
          margin: 0px;
          padding: 0px;
          line-height: 2.08em;
        }
        .tabmenu li {
          list-style-type: none;
          display: block;
          float: left;
          line-height: 2.08em;
        }
        .tabmenu a {
          padding: 0.3em 1.39em;
        }
        .tabmenu a {
          font-weight: bold;
          color: #f0ecd8;
        }
        .tabmenu a {
          border-top: thin solid #41638b;
          border-right: thin solid #41638b;
          border-bottom: none;
          border-left: thin solid #41638b;
        }
        .tabmenu a {
          background: #839ab8;
        }
        .tabmenu a.current, .tabmenu a:hover {
          color: #41638b;
          background: none;
        }
        .events {
          border-top:thin solid #41638B;
          clear:left;
        }

        .join-event, .leave-event {
          list-style: none;
        }
        li.join-event::before {
          content: "+ ";
          font-weight: bold;
          font-size: 123%;
        }
        li.leave-event::before {
          content: "\2212  "; /* Hex Code for the minus sign &#8722; */
          font-weight: bold;
          font-size: 123%;
        }
        ul.join > li.leave-event {
          display: None;
        }
        ul.leave > li.join-event {
          display: None;
        }
      </style>
    </tal:block>
  </head>
  <body>
    <tal:block metal:fill-slot="body">
      <h1 tal:content="view/title">Join and Leave Log for Group Name</h1>
      <div tal:replace="structure provider:gs.group.member.log.LogContentProvider"/>
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <script type="text/javascript">
        jQuery.noConflict();
        var switchTab = function() {
          button = jQuery(this);
          buttonId = button.attr("id");
          yearMonth = buttonId.split('-')[0] + "-" + buttonId.split('-')[1];
          jQuery('#' + yearMonth + '-tabmenu .current').removeClass('current');
          button.addClass('current');
          displayArea = jQuery("#" + yearMonth + "-events");
          show = buttonId.split('-')[2]
          displayArea.addClass(show);
          if (show != "join") {
            displayArea.removeClass("join");
          }
          if (show != "leave") {
            displayArea.removeClass("leave");
          }
        }
        var prepare = function (button) {
            jQuery(this).removeAttr('href').css("cursor","pointer").click(switchTab);
        }
        jQuery(document).ready( function () {
            jQuery('.tabmenu a').each(prepare);
        })
      </script>
    </tal:block>
  </body>
</html>

